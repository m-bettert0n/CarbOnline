{
  "manifest_version": 2,
  "name": "CarbOnline FootPrint",
  "description": "Track your browsers carbon footprint",
  "version": "1.0",
  "permissions": ["activeTab","declarativeContent","storage", "history", "webRequest", "tabs", "webRequestBlocking", "<all_urls>"],
  "background":{
    "scripts": ["background.js"],
    "persistent": true
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon":{
      "128": "icon.png"
    }
  },
  "icons": {
    "128": "icon.png"
  }
}
